<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        console.log("Script Loaded!");

        // Ensure signup form shows by default
        $(".signup").show();
        $(".login").hide();

        // Show login form when clicking "Login"
        $(document).on("click", "#login-link", function (e) {
            e.preventDefault();
            console.log("Login Clicked!");
            $(".signup").hide();
            $(".login").fadeIn();
        });

        // Show signup form when clicking "Signup"
        $(document).on("click", "#signup-link", function (e) {
            e.preventDefault();
            console.log(" Signup Clicked!");
            $(".login").hide();
            $(".signup").fadeIn();
        });

        // Close popup when clicking outside
        $(".blur-bg-overlay").click(function () {
            console.log("Clicked outside, closing popup");
            $(".form-popup").fadeOut();
            $(".blur-bg-overlay").fadeOut();
        });
    });


   
</script>